\renewcommand\@makechapterhead[2][]{%
% macro for typesetting the chapter number
  \def\printnumber{%
    \numberbefore@pnr
      {%
      \numbercolor@pnr
	  \if@pgone
	    \numberfontsizepgone@pnr
	  \fi
	  \if@pgtwo
	    \numberfontsizepgtwo@pnr
	  \fi      
      \numberfontfamily@pnr
      \numberfontweight@pnr
      \thechapter
      \numberpunctuation@pnr
      }
      \numberafter@pnr
  }%
% macro for typesetting the chapter name
  \def\printchaptername{%
    {
    \chapterfontfamily@pnr
    \chapterfontweight@pnr
    \color{\chaptercolor@pnr}
	\if@pgone
	  \chapterfontsizepgone@pnr
      \chaptername%
	\fi
	\if@pgtwo
	  \chapterfontsizepgtwo@pnr
      \uppercase\expandafter{\chaptername}%
	\fi
	\space
    }%
  }%
% set all keys
  {%
	{%1st page
\clearpage
\thispagestyle{empty}
	\@pgonetrue\@pgtwofalse
    \parindent\z@
    \normalfont%
	\vspace*{0.35\paperheight}
    \ifnum \c@secnumdepth>\m@ne%
      \if@mainmatter%
         \chapterbefore@pnr%
		 \if@leftpgone%
			\raggedright
		 \fi%
		 \if@centerpgone%
			\centering
		 \fi%
		 \if@rightpgone%
			\raggedleft
		 \fi%
         \if@leftname
            \printnumber
         \fi%
         \printchaptername
         \if@rightname
            \printnumber
         \fi%
         \chapterafter@pnr
      \fi%
    \fi%
     %chapter title
    \interlinepenalty\@M%
    \titlebeforeskip@pnr%
    \titlefontfamily@pnr%
	\titlefontsizepgone@pnr
    \titlefontweight@pnr%
    
    \titlefontcolor@pnr%
    %\selectfont%
    \titlebefore@pnr%
		{#2}
    \titleafter@pnr%
    \par\nobreak%
% skip after title
    \titleafterskip@pnr%
% headers
    %\thispagestyle{\headerstyle@pnr}%
   \thispagestyle{emptypg}%
   }
   \pagebreak
   {%2nd page
   \@pgtwotrue\@pgonefalse
    \parindent\z@
    \normalfont%
    \ifnum \c@secnumdepth>\m@ne%
      \if@mainmatter%
         \chapterbefore@pnr%
		 \if@leftpgtwo%
			\raggedright
		 \fi%
		 \if@centerpgtwo%
			\centering
		 \fi%
		 \if@rightpgtwo%
			\raggedleft
		 \fi%
         \if@leftname
            \printnumber
         \fi%
         {\uppercase\expandafter{\printchaptername}}
         \if@rightname
            \printnumber
         \fi%
         \chapterafter@pnr
      \fi%
    \fi%
     %chapter title
    \interlinepenalty\@M%
    \titlebeforeskip@pnr%
    \titlefontfamily@pnr%
    \titlefontweight@pnr%
    \titlefontsizepgtwo@pnr
    \titlefontcolor@pnr%
   % \selectfont%
    \titlebefore@pnr%
		{\uppercase\expandafter{#2}}
    \titleafter@pnr%
    \par\nobreak%
% skip after title
    \titleafterskip@pnr%
% headers
    \pagestyle{\headerstyle@pnr}%
   }
  }
}

